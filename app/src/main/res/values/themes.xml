<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyExchanger" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy_blue</item>
        <item name="colorSecondaryVariant">@color/navy_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/navy_blue</item>
    </style>

    <style name="App.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/navy_blue</item>
    </style>

    <style name="App.TextAppearance.Regular" parent="">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="App.TextAppearance.Bold" parent="">
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
    </style>

    <style name="App.TextAppearance.Light" parent="">
        <item name="fontFamily">@font/iransans_light</item>
        <item name="android:fontFamily">@font/iransans_light</item>
    </style>

    <style name="App.TextAppearance.Ultralight" parent="">
        <item name="fontFamily">@font/iransans_ultralight</item>
        <item name="android:fontFamily">@font/iransans_ultralight</item>
    </style>

    <style name="App.TextAppearance.Medium" parent="">
        <item name="fontFamily">@font/iransans_medium</item>
        <item name="android:fontFamily">@font/iransans_medium</item>
    </style>
</resources>