<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/navy_blue"
    android:gravity="center">

    <TextView
        android:id="@+id/my_balance_currency_amount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000.00"
        android:textColor="@color/white"
        android:textAppearance="@style/App.TextAppearance.Bold"
        android:textSize="18sp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/my_balance_currency_unit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance.Regular"
        tools:text="EUR"
        android:textColor="#386E98"
        android:textSize="18sp"
        />

</LinearLayout>