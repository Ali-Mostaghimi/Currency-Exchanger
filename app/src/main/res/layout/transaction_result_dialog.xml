<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/rounded_16_white_rect"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance.Medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:text="@string/transaction_success_currency_converted_dialog_title"/>


    <TextView
        android:id="@+id/transaction_result_dialog_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance.Regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:text="You have converted 100.00 EUR to 110.30 USD. Commission Fee - 0.70 EUR."/>

    <TextView
        android:id="@+id/transaction_result_dialog_done_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance.Medium"
        android:textSize="16sp"
        android:textColor="@color/blue_darker"
        android:layout_marginTop="9dp"
        android:paddingEnd="46dp"
        android:paddingStart="46dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/transaction_success_currency_converted_dialog_done_text"/>



</LinearLayout>